{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "node",
    "lib": ["ESNext"],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "outDir": "../../../dist/apps/web/scripts", 
    "rootDir": "."
  },
  "include": ["./**/*.ts"],
  "ts-node": {
    "esm": true,
  }
}